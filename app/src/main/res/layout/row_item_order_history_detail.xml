<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_view_order_history_detail"
        android:layout_width="@dimen/dp73"
        android:layout_height="@dimen/dp73"
        android:src="@mipmap/ic_shoes"
        app:riv_corner_radius="@dimen/dp4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Nike Air Force Jester"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_size_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:text="Size 42"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350.000 x"
                android:textColor="@color/brownish_grey_two"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/text_view_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:text="1"
                android:textColor="@color/pinkish_red"
                android:textSize="@dimen/sp22" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>